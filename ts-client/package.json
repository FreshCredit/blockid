{
  "name": "ts-client",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "typedocMain": "src/index.ts",
  "scripts": {
    "build": "yarn generate:meta",
    "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --endpoint ./metadata.json --package ts-client --input ./src/interfaces",
    "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --endpoint ./metadata.json --output ./src/interfaces",
    "docs": "typedoc",
    "credits:register": "ts-node ./scripts/register-credits.ts",
    "credits:mint": "ts-node ./scripts/mint-cards.ts",
    "credits:lookup": "ts-node ./scripts/lookup-cards.ts",
    "credits:summary": "ts-node ./scripts/onchain-summary.ts",
    "credits:buy": "ts-node ./scripts/buy-card.ts",
    "credits:sell": "ts-node ./scripts/sell-card.ts"
  },
  "dependencies": {
    "@polkadot/api": "^7.5.1",
    "axios": "^0.27.2"
  },
  "devDependencies": {
    "@polkadot/typegen": "^7.5.1",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5"
  }
}
